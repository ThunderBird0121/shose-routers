{
  "private": true,
  "name": "remix-routers",
  "description": "Monorepo for remix routers for different UI libraries",
  "version": "0.1.0",
  "workspaces": [
    "packages/vue"
  ],
  "scripts": {
    "validate": "npm run clean && npm ci && npm run build && npm run lint && npm run integration",
    "build": "npm run build --workspaces",
    "clean": "git clean -fX .",
    "lint": "eslint --ext .js,.ts .",
    "integration:start": "npm run reference-app --workspace packages/vue",
    "integration:test": "cypress run",
    "integration": "start-server-and-test integration:start http-get://localhost:3000/ integration:test",
    "prettier": "prettier --write .",
    "postinstall": "patch-package",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/types": "7.18.2",
    "@typescript-eslint/eslint-plugin": "5.26.0",
    "cypress": "9.7.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "2.12.1",
    "husky": "8.0.1",
    "lint-staged": "12.4.2",
    "patch-package": "6.4.7",
    "prettier": "2.6.2",
    "start-server-and-test": "1.14.0",
    "typescript": "4.6.4",
    "vite": "2.9.9"
  }
}
